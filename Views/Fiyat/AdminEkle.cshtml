@model UetdsProgramiNet.Models.FiyatModel
@{
    ViewData["Title"] = "Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-content">
    <div class="page-content">
        <div class="container-fluid">
            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-sm-flex align-items-center justify-content-between bg-galaxy-transparent">
                        <h4 class="mb-sm-0">Yeni Fiyat Ekle</h4>
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="/Fiyat/AdminIndex">Fiyatlandırmalar</a></li>
                                <li class="breadcrumb-item active">Yeni Fiyat Ekle</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Yeni Fiyat Ekle</h4><br />
                            <form asp-action="AdminEkle" method="post">
                                <div class="mb-3">
                                    <label asp-for="AracPaketi" class="form-label">Araç Paketi</label>
                                    <input asp-for="AracPaketi" class="form-control" required />
                                    <span asp-validation-for="AracPaketi" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="KullaniciMiktari" class="form-label">Kullanıcı Miktarı</label>
                                    <input asp-for="KullaniciMiktari" class="form-control" required />
                                    <span asp-validation-for="KullaniciMiktari" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="MobilBilgisi" class="form-label">Mobil Bilgisi</label>
                                    <input asp-for="MobilBilgisi" class="form-control" required />
                                    <span asp-validation-for="MobilBilgisi" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="DestekBilgisi" class="form-label">Destek Bilgisi</label>
                                    <input asp-for="DestekBilgisi" class="form-control" required />
                                    <span asp-validation-for="DestekBilgisi" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="DestekSaatleri" class="form-label">Destek Saatleri</label>
                                    <input asp-for="DestekSaatleri" class="form-control" required />
                                    <span asp-validation-for="DestekSaatleri" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="YedeklemeTuru" class="form-label">Yedekleme Türü</label>
                                    <input asp-for="YedeklemeTuru" class="form-control" required />
                                    <span asp-validation-for="YedeklemeTuru" class="text-danger"></span>
                                </div>

                                <button type="submit" class="btn btn-success">Kaydet</button>
                                <a asp-action="AdminIndex" class="btn btn-secondary">İptal</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Page-content -->

    <footer class="footer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6">
                    <script>document.write(new Date().getFullYear())</script> © Velzon.
                </div>
                <div class="col-sm-6">
                    <div class="text-sm-end d-none d-sm-block">
                        Design & Develop by Mehmetcan Demir
                    </div>
                </div>
            </div>
        </div>
    </footer>
</div>
@model UetdsProgramiNet.Models.BlogModel
@{
    ViewData["Title"] = "Guncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-content">
    <div class="page-content">
        <div class="container-fluid">
            <!-- start page title -->
            <div class="row">   
                <div class="col-12">
                    <div class="page-title-box d-sm-flex align-items-center justify-content-between bg-galaxy-transparent">
                        <h4 class="mb-sm-0">Blog Güncelle</h4>
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="/Blog/Index">Bloglar</a></li>
                                <li class="breadcrumb-item active">Blog Güncelle</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Blog Güncelle</h4><br />
                            <form asp-action="Guncelle" method="post" enctype="multipart/form-data">
                                <input type="hidden" asp-for="Id" />
                                <div class="mb-3">
                                    <label asp-for="Title" class="form-label">Blog Başlığı</label>
                                    <input asp-for="Title" class="form-control" required />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Description" class="form-label">Blog Açıklaması</label>
                                    <input asp-for="Description" class="form-control" required />
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="ImgUrl" class="form-label">Resim URL</label>
                                    <input asp-for="ImgUrl" class="form-control" required />
                                    <span asp-validation-for="ImgUrl" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="InfoUrl" class="form-label">Bağlantı Yolu</label>
                                    <input asp-for="InfoUrl" class="form-control" required />
                                    <span asp-validation-for="InfoUrl" class="text-danger"></span>
                                </div>

                                <button type="submit" class="btn btn-success">Güncelle</button>
                                <a asp-action="Index" class="btn btn-secondary">İptal</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Page-content -->

    <footer class="footer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6">
                    <script>document.write(new Date().getFullYear())</script> © Velzon.
                </div>
                <div class="col-sm-6">
                    <div class="text-sm-end d-none d-sm-block">
                        Design & Develop by Themesbrand
                    </div>
                </div>
            </div>
        </div>
    </footer>
</div>
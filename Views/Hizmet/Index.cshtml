@model List<HizmetModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1>Referans Listesi</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                Icon Url
            </th>
            <th>
                Başlık
            </th>
            <th>
                Açıklama
            </th>
            <th>InfoUrl</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.IconUrl" alt="Hizmet Icon" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InfoUrl)
                </td>
                <td>
                    <a asp-action="Guncelle" asp-route-id="@item.Id" class="btn btn-warning">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Yeni referans ekleme butonu -->
<p>
    <a asp-action="Ekle" class="btn btn-primary">Yeni Referans Ekle</a>
</p>


@model UetdsProgramiNet.Models.BlogModel
@{
    ViewData["Title"] = "Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-content">
    <div class="page-content">
        <div class="container-fluid">
            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-sm-flex align-items-center justify-content-between bg-galaxy-transparent">
                        <h4 class="mb-sm-0">Yeni Blog Ekle</h4>
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="/Blog/blog-listesi">Bloglar</a></li>
                                <li class="breadcrumb-item active">Yeni Blog Ekle</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Yeni Blog Ekle</h4><br />
                            <form asp-action="blog-ekle" method="post">
                                <div class="mb-3">
                                    <label asp-for="Title" class="form-label">Başlık</label>
                                    <input asp-for="Title" class="form-control" required />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Description" class="form-label">Açıklama</label>
                                    <input asp-for="Description" class="form-control" required />
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="SubDescription" class="form-label">Alt Açıklama</label>
                                    <textarea asp-for="SubDescription" class="form-control" rows="4" required></textarea>
                                    <span asp-validation-for="SubDescription" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="InfoUrl" class="form-label">Yönlendirme Linki</label>
                                    <input asp-for="InfoUrl" class="form-control" required />
                                    <span asp-validation-for="InfoUrl" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="ImgUrl" class="form-label">Resim Yolu</label>
                                    <input asp-for="ImgUrl" class="form-control" required />
                                    <span asp-validation-for="ImgUrl" class="text-danger"></span>
                                </div>
                                <div class="form-check form-switch mb-3">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                    <label class="form-check-label" for="IsActive">
                                        @(Model.IsActive ? "Yayında" : "Yayında Değil")
                                    </label>
                                </div>

                                <button type="submit" class="btn btn-success">Kaydet</button>
                                <a asp-action="blog-listesi" class="btn btn-secondary">İptal</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Page-content -->

    <footer class="footer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6">
                    <script>document.write(new Date().getFullYear())</script> © Velzon.
                </div>
                <div class="col-sm-6">
                    <div class="text-sm-end d-none d-sm-block">
                        Design & Develop by Mehmetcan Demir
                    </div>
                </div>
            </div>
        </div>
    </footer>
</div>
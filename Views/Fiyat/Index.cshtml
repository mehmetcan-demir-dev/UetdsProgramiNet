@model List<UetdsProgramiNet.Models.FiyatModel>

@{
    ViewData["Title"] = "Fiyat Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-content">
    <div class="page-content">
        <div class="container-fluid">
            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-sm-flex align-items-center justify-content-between bg-galaxy-transparent">
                        <h4 class="mb-sm-0">Fiyat Listesi</h4>
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="/Fiyat/Index">Fiyatlar</a></li>
                                <li class="breadcrumb-item active">Fiyat Listesi</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Fiyatlar</h4>
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Açıklama</th>
                                            <th>Kullanıcı Miktarı</th>
                                            <th>Mobil Bilgisi</th>
                                            <th>Destek Bilgisi</th>
                                            <th>Destek Saatleri</th>
                                            <th>Yedekleme Türü</th>
                                            <th>İşlemler</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <h1>@item.Id</h1>
                                                <td>@Html.DisplayFor(modelItem => item.AracSayiAciklamasi)</td>
                                                <td>@Html.DisplayFor(modelItem => item.KullaniciMiktari)</td>
                                                <td>@Html.DisplayFor(modelItem => item.MobilBilgisi)</td>
                                                <td>@Html.DisplayFor(modelItem => item.DestekBilgisi)</td>
                                                <td>@Html.DisplayFor(modelItem => item.DestekSaatleri)</td>
                                                <td>@Html.DisplayFor(modelItem => item.YedeklemeTuru)</td>
                                                <td>
                                                    <a asp-action="Guncelle" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Güncelle</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <a asp-action="Ekle" class="btn btn-primary mt-3">Yeni Fiyat Ekle</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Page-content -->

    <footer class="footer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6">
                    <script>document.write(new Date().getFullYear())</script> © Velzon.
                </div>
                <div class="col-sm-6">
                    <div class="text-sm-end d-none d-sm-block">
                        Design & Develop by Mehmetcan Demir
                    </div>
                </div>
            </div>
        </div>
    </footer>
</div>

<script>
        function toggleReadMore(sectionId) {
        var moreText = document.querySelector(`#${sectionId} .more-text`);
        var dots = document.querySelector(`#${sectionId} .dots`);
        var btn = document.querySelector(`#${sectionId} .read-more-btn`);

        // Eğer daha fazla metin gizli ise, göster, yoksa gizle
        if (moreText.style.display === "none") {
            moreText.style.display = "inline";
            dots.style.display = "none"; // '...' gizlensin
            btn.innerHTML = "Daha az göster";
        } else {
            moreText.style.display = "none";
            dots.style.display = "inline"; // '...' geri gelsin
            btn.innerHTML = "...Devamı için tıklayın";
        }
    }

    // Scroll olayını dinle
    window.addEventListener('scroll', function() {
        var sections = document.querySelectorAll('section');
        sections.forEach(function(section) {
            var moreText = section.querySelector('.more-text');
            var dots = section.querySelector('.dots');
            var btn = section.querySelector('.read-more-btn');

            // Eğer "daha fazla" metin görünür durumdaysa
            if (moreText && dots && btn && moreText.style.display === "inline") {
                // Scroll olayında, metni gizle
                moreText.style.display = "none";
                dots.style.display = "inline";  // '...' geri gelsin
                btn.innerHTML = "...Devamı için tıklayın";
            }
        });
    });
</script>


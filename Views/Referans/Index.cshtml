@model List<ReferansModel>

@{
    ViewData["Title"] = "Referans Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="main-content">
    <div class="page-content">
        <div class="container-fluid">
            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-sm-flex align-items-center justify-content-between bg-galaxy-transparent">
                        <h4 class="mb-sm-0">Referans Listesi</h4>
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="/Referans/Index">Referanslar</a></li>
                                <li class="breadcrumb-item active">Referans Listesi</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Referans Listesi</h4>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Referans</th>
                                        <th>Resim Yolu</th>
                                        <th>Aktif mi?</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                            <td>
                                                <a href="#" data-bs-toggle="modal" data-bs-target="#imageModal-@item.Id">
                                                    <img src="@item.ImageUrl" style="width: 40px; height: 40px; object-fit: cover;" alt="Referans Resmi" />
                                                </a>
                                            </td>
                                            <td>@Html.DisplayFor(modelItem => item.IsActive)</td>
                                            <td>
                                                <a asp-action="Guncelle" asp-route-id="@item.Id" class="btn btn-warning">Güncelle</a>
                                                <a asp-action="Sil" asp-route-id="@item.Id" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@item.Id">Sil</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <p>
                                <a asp-action="Ekle" class="btn btn-primary">Yeni Referans Ekle</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Page-content -->

    <footer class="footer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6">
                    <script>document.write(new Date().getFullYear())</script> © Velzon.
                </div>
                <div class="col-sm-6">
                    <div class="text-sm-end d-none d-sm-block">
                        Design & Develop by Themesbrand
                    </div>
                </div>
            </div>
        </div>
    </footer>
</div>

<!-- Modal için HTML -->
@foreach (var item in Model)
{
    <!-- Resim Modalı -->
    <div class="modal fade" id="imageModal-@item.Id" tabindex="-1" aria-labelledby="imageModalLabel-@item.Id" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="imageModalLabel-@item.Id">Referans Resmi</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <img src="@item.ImageUrl" class="img-fluid" alt="Referans Resmi" />
                </div>
            </div>
        </div>
    </div>

    <!-- Silme Onayı Modalı -->
    <div class="modal fade" id="deleteModal-@item.Id" tabindex="-1" aria-labelledby="deleteModalLabel-@item.Id" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel-@item.Id">Referansı Sil</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Bu referansı silmek istediğinizden emin misiniz?</p>
                </div>
                <div class="modal-footer">
                    <form asp-action="Sil" asp-route-id="@item.Id" method="post">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hayır</button>
                        <button type="submit" class="btn btn-danger">Evet, Sil</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}
